extends layout.pug
block head
    link(rel="stylesheet", href="/stylesheets/album.css")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
block content
    div(class='albumTitle')
        h1= `${album.title} by ${album.artist}`
    div(class='albumImg')
        img(src=album.imgSrc)
    div(class='genre')
        h3=`Genre: ${album.Genre.name}`
    div(class='releaseDate')
        h3=`Release Date: ${album.releaseDate}`
    form(action=`/reviews/albums/${album.id}` method="get" class="reviewForm")
        button( type="submit" class="reviewButton") Add a Review
    div(class='songs')
        table
            thead
                tr
                    th Track Number
                    th Title
            tbody
                each song in songs
                    tr
                        td= `${song.trackNum}`
                        td= `${song.title}`
    div(class='reviews')
        table
            thead
                tr
                    th UserName
                    th Comment
                    th Rating
            tbody
                each review in reviews
                    tr
                        td= `${review.User.username}`
                        td= `${review.comment}`
                        td= `${review.rating}`
