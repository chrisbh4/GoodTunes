extends layout.pug
block content
    div(class='albumTitle')
        h1= `${album.title} by ${album.artist}`
    div(class='albumImg')
        img(src=album.imgSrc)
    div(class='genre')
        h3=`Genre: ${album.Genre.name}`
    div(class='releaseDate')
        h3=`Release Date: ${album.releaseDate}`
    div(class='songs') Tracklist
        table
            thead
                tr
                    th Track Number
                    th Title
            tbody
                each song in songs
                    tr
                        td= `${song.trackNum}`
                        td= `${song.title}`
    div(class='review-button')
        a(href=`/reviews/albums/${album.id}`) Add a review
    div(class='reviews')
        table
            thead
                tr
                    th UserName
                    th Comment
                    th Rating
            tbody
                each review in reviews
                    tr
                        td= `${review.User.username}`
                        td= `${review.comment}`
                        td= `${review.rating}`
