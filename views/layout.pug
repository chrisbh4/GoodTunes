html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title GoodTunes - #{title}
    link(rel='stylesheet' href='/stylesheets/navbar.css')
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    block head
    block scripts
  body
    div(class='navbar')
      div.left-navbar
        a(href="/")
          img(class="logo" src="https://i.imgur.com/sf38Uhb.png")
        div.albums-directory
          form(class='albums-page' action='/albums/' method='get')
            button(class='albums-page-button' type='submit') Album Directory
        div.search
          form(action="/albums/search" method='get')
            input(class='searchInput' type="search" name='search' placeholder='Search...')
            //- button(class='searchButton' type='submit') âŒ•
      if locals.authenticated
        div.middle-navbar
          span(class='navbar-text') Welcome #{user.username}
        div.right-navbar.user-buttons
          form(class='my-page' action=`/shelves/users/${user.id}` method='get')
            button(class='my-collection-button' type='submit') My Collection
          form(class="navbar-logout" action='/users/logout' method='post')
            input(class='logout-button' type='submit' value='Log Out')
      else
        div.middle-navbar
          form(method='post' action='/users/demo')
            button(class="take-a-tour" type='submit') Take a Tour
        div.right-navbar
          form(method='get' action='/users/signup')
            button(class="signup-button" type='submit') Sign Up
          form(method='get' action='/users/login')
            button(class="login-button" type='submit') Login
    block content

  //-  span(class='navbar-text')
